<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/discovery_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="2dp"
        android:src="@drawable/ic_pyq"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/discovery__tab"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:text="朋友圈"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/discovery_icon"
        app:layout_constraintTop_toTopOf="@id/discovery_icon" />

    <ImageView
        android:id="@+id/discovery_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@id/discovery__tab"
        app:layout_constraintTop_toTopOf="@id/discovery__tab"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:padding="2dp"
        android:src="@drawable/ic_goto"
        app:layout_constraintStart_toEndOf="@id/discovery_image"
        app:layout_constraintTop_toTopOf="@id/discovery_image" />

    <View
        android:layout_width="333dp"
        android:layout_height="0.7dp"
        android:background="#E6E6FA"
        app:layout_constraintStart_toStartOf="@id/discovery__tab"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>